<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Goalkeeper</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="layout">
        <!-- Left Side: Form -->
        <div class="form-container">
            <h1>Goalkeeper</h1>
            <form id="financeForm">
                <!-- Date of Payment -->
                <label for="paymentDate">Date of Payment:</label>
                <input type="date" id="paymentDate" name="paymentDate" required>

                <!-- Other fields -->
                <label for="bankName">Bank/Creditor Name:</label>
                <input type="text" id="bankName" name="bankName" required>

                <label for="balance">Balance:</label>
                <input type="number" id="balance" name="balance" step="any" required>

                <label for="minPayment">Minimum Payment:</label>
                <input type="number" id="minPayment" name="minPayment" step="any" required>

                <label for="interestCharge">Purchase Interest Charge:</label>
                <input type="number" id="interestCharge" name="interestCharge" step="any" required>

                <label for="available">$ Available:</label>
                <input type="number" id="available" name="available" step="any" required>

                <label for="amountPaid">Amount Paid:</label>
                <input type="number" id="amountPaid" name="amountPaid" step="any" required>

                <label for="paidOn">Paid On:</label>
                <input type="date" id="paidOn" name="paidOn" required>

                <button type="submit">Submit</button>
            </form>
        </div>

        <!-- Right Side: Calendar -->
        <div class="calendar-container">
            <h1>2025 Calendar</h1>
            <!-- Month Selector -->
            <div id="month-selector">
                <!-- Months will be dynamically generated here -->
            </div>

            <!-- Month View -->
            <div id="month-view" class="hidden">
                <h2 id="month-title"></h2>
                <div id="month-days">
                    <!-- Days will be dynamically generated here -->
                </div>
            </div>

            <!-- Day View (Modal) -->
            <div id="day-modal" class="modal hidden">
                <div class="modal-content">
                    <span class="close">&times;</span>
                    <h2 id="day-title"></h2>
                    <div id="day-details">
                        <!-- Bill details will be dynamically inserted here -->
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="/script.js"></script>
</body>
</html>